{
    "buildCommand": "prisma generate && next build",
    "framework": "nextjs",
    "regions": [
        "iad1"
    ],
    "env": {
        "PRISMA_ENGINES_CHECKSUM_IGNORE_MISSING": "1",
        "NODE_ENV": "production"
    },
    "build": {
        "env": {
            "NEXT_TELEMETRY_DISABLED": "1"
        }
    },
    "functions": {
        "src/app/**/*": {
            "maxDuration": 30
        },
        "src/app/api/upload/**/*": {
            "memory": 1024,
            "maxDuration": 30
        }
    },
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                },
                {
                    "key": "Referrer-Policy",
                    "value": "strict-origin-when-cross-origin"
                }
            ]
        }
    ],
    "cleanUrls": true,
    "trailingSlash": false,
    "github": {
        "silent": false,
        "autoJobCancelation": true
    }
}